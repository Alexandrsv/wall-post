{
  "name": "wall-post",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "callback:start": "dotenv -e .env -- yarn workspace @wall-post/callback run start",
    "callback:dev": "dotenv -e .env -- yarn workspace @wall-post/callback run dev",
    "prisma:generate": "yarn workspace @wall-post/prisma run prisma:generate",
    "prisma:deploy": "dotenv -e .env -- yarn workspace @wall-post/prisma run prisma:deploy",
    "prisma:studio": "dotenv -e .env -- yarn workspace @wall-post/prisma run prisma:studio",
    "mini-app:dev": "yarn workspace @wall-post/mini-app run dev",
    "mini-app:tunnel:vk": "yarn workspace @wall-post/mini-app run tunnel:vk",
    "mini-app:deploy:vk": "yarn workspace @wall-post/mini-app run deploy",
    "dev:all": "yarn workspaces foreach -Api run dev",
    "ts:check:all": "yarn workspaces foreach -Api run ts:check",
    "lint": "eslint . --fix -c eslint.config.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
